<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".components.navigation.MainNavigationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_nav_simple_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Simple Drawer"
            android:background="@drawable/card_red"/>
        <Button
            android:id="@+id/btn_nav_basic_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:text="Basic Drawer"
            android:background="@drawable/card_green"/>
        <Button
            android:id="@+id/btn_simple_nav_bottombar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:text="Basic Bottombar"
            android:background="@drawable/card_blue"/>

        <Button
            android:id="@+id/btn_shifting_nav_bottombar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:text="Shifting Bottombar"
            android:background="@drawable/card_orange"/>

        <Button
            android:id="@+id/btn_profile_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:text="profile card"
            android:background="@drawable/card_purple"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>